<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="26dp"
        android:background="@drawable/test_blue_curved"
        android:gravity="center"
        android:padding="4dp">

        <ImageView
            android:id="@+id/list_item_frag_qrcode_checkbox_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/qmark"></ImageView>

        <TextView
            android:id="@+id/list_item_frag_qrcode_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:fontFamily="@font/michroma"
            android:gravity="center|center_vertical"
            android:text="text"
            android:textColor="@color/white"
            android:textSize="14sp"></TextView>

    </LinearLayout>


</LinearLayout>